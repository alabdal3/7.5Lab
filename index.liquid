---
layout: layout.liquid
title: Home
---

<div class="p-6">
    <div x-data="{ users: [], posts: [] }" x-init="
        fetch('https://jsonplaceholder.typicode.com/users')
        .then(res => res.json())
        .then(data => users = data);

        fetch('https://jsonplaceholder.typicode.com/posts')
        .then(res => res.json())
        .then(data => posts = data);
    ">
        <div class="mt-8 text-center">
            <h2 class="text-2xl font-semibold text-green-600 mb-3">Users</h2>
            <ul class="bg-white p-4 shadow-md rounded-md max-w-2xl mx-auto">
                <template x-for="user in users" :key="user.id">
                    <li class="border-b last:border-none p-3">
                        <h3 class="text-lg font-bold text-gray-700" x-text="user.name"></h3>
                        <p class="text-gray-600" x-text="user.email"></p>
                    </li>
                </template>
            </ul>
        </div>

        <div class="mt-8 text-center">
            <h2 class="text-2xl font-semibold text-green-600 mb-3">Recent Posts</h2>
            <ul class="bg-white p-4 shadow-md rounded-md max-w-2xl mx-auto">
                <template x-for="post in posts.slice(0, 5)" :key="post.id">
                    <li class="border-b last:border-none p-3">
                        <h3 class="text-lg font-bold text-gray-700" x-text="post.title"></h3>
                        <p class="text-gray-600" x-text="post.body"></p>
                    </li>
                </template>
            </ul>
        </div>
    </div>
</div>